            if active_names:
                plugins_info = (
                    f"\nüß© Enabled Plugins ({len(active_names)}):\n"
                    + "\n".join(f"‚Ä¢ {name}" for name in sorted(active_names))
                )
            else:
                plugins_info = "\nüß© Enabled Plugins: None"
            return plugins_info
        except Exception as e:
